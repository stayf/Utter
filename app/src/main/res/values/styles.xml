<resources>
    <color name="item_gallery_placeholder">#1A5B95C2</color>

    <color name="item_pressed_color">#1A000000</color>
    <color name="item_pressed_color_no_transparent">#FFE5E5E5</color>

    <color name="item_default_color">#00000000</color>
    <color name="transparent_color">#00000000</color>
    <color name="green_color">#FF73C979</color>

    <color name="white_color">#FFFFFF</color>
    <color name="theme_actionbar_color">#5B95C2</color>
    <color name="black_color">#000000</color>

    <color name="black_transparent">#33000000</color>

    <style name="PhotoTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent_color</item>
        <item name="actionOverflowButtonStyle">@style/OverFlowPhoto</item>
    </style>

    <style name="LaunchTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white_color</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:textColorSecondary">@color/white_color</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Utter" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white_color</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:textColorSecondary">@color/white_color</item>
        <item name="selectableItemBackground">@drawable/item_click_transparent</item>
        <item name="colorPrimaryDark">@color/theme_actionbar_color</item>

    </style>


    <style name="OverFlowPhoto" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_more_photo</item>
        <item name="android:minWidth">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:paddingLeft">@dimen/overflow_menu_padding_left</item>
        <item name="android:paddingRight">@dimen/overflow_menu_padding_right</item>
    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_more</item>
        <item name="android:background">@drawable/item_click_transparent</item>
        <item name="android:minWidth">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:paddingLeft">@dimen/overflow_menu_padding_left</item>
        <item name="android:paddingRight">@dimen/overflow_menu_padding_right</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="OverFlowMusic" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_more_grey</item>
        <item name="android:background">@drawable/item_click_transparent</item>
        <item name="android:minWidth">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:paddingLeft">@dimen/overflow_menu_padding_left</item>
        <item name="android:paddingRight">@dimen/overflow_menu_padding_right</item>
    </style>

    <style name="Toolbar_Popup" parent="Base.Widget.AppCompat.ListPopupWindow">
        <item name="android:colorBackground">@color/white_color</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:selectableItemBackground">@drawable/item_click_transparent</item>

    </style>

    <style name="popup_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_open</item>
        <item name="android:windowExitAnimation">@anim/popup_close</item>
    </style>

    <style name="MusicPlayerThemeOne" parent="@style/Utter">
        <item name="android:windowBackground">@color/transparent_color</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="MusicPlayerThemeTwo" parent="@style/Utter">
        <item name="android:windowBackground">@color/transparent_color</item>
        <item name="actionOverflowButtonStyle">@style/OverFlowMusic</item>
    </style>

</resources>
